<plugin>
   <extension
         point="org.eclipse.gyrex.server.roles">
      <defaultStart
            mode="any"
            roleId="org.eclipse.gyrex.cloud.roles.coordinator"
            trigger="onBoot">
      </defaultStart>
      <defaultStart
            mode="development"
            roleId="org.eclipse.gyrex.cloud.roles.leader"
            startLevel="-10"
            trigger="onBoot">
      </defaultStart>
      <defaultStart
            mode="any"
            roleId="org.eclipse.gyrex.http.jetty.roles.engine"
            startLevel="10"
            trigger="onCloudConnect">
      </defaultStart>
      <defaultStart
            mode="any"
            roleId="org.eclipse.gyrex.p2.node.installer.role"
            startLevel="50"
            trigger="onCloudConnect">
      </defaultStart>
      <defaultStart
            mode="any"
            roleId="org.eclipse.gyrex.http.appmanager"
            trigger="onCloudConnect">
      </defaultStart>
      <defaultStart
            mode="development"
            roleId="org.eclipse.gyrex.jobs.roles.scheduler"
            startLevel="100"
            trigger="onCloudConnect">
      </defaultStart>
      <defaultStart
            mode="development"
            roleId="org.eclipse.gyrex.jobs.roles.worker"
            startLevel="100"
            trigger="onCloudConnect">
      </defaultStart>
   </extension>

</plugin>
